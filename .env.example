# =============================================================================
# ICT Trading Bot - 환경 변수 템플릿
# =============================================================================
# 이 파일을 .env로 복사하고 실제 값으로 변경하세요
# cp .env.example .env

# =============================================================================
# 바이낸스 API 설정 (필수)
# =============================================================================
# 바이낸스 계정에서 생성한 API 키
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# 바이낸스 API 환경 (testnet 또는 mainnet)
BINANCE_TESTNET=true

# =============================================================================
# Discord 알림 설정 (선택)
# =============================================================================
# Discord 웹훅 URL (알림을 받을 채널의 웹훅)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# 알림 레벨 (ERROR, WARNING, INFO, DEBUG)
NOTIFICATION_LEVEL=INFO

# =============================================================================
# 거래 설정
# =============================================================================
# 기본 거래 심볼
DEFAULT_SYMBOL=BTCUSDT

# 거래당 최대 리스크 (포트폴리오 대비 %)
MAX_RISK_PER_TRADE=2.0

# 일일 최대 거래 횟수
MAX_TRADES_PER_DAY=10

# 최대 동시 포지션 수
MAX_CONCURRENT_POSITIONS=3

# =============================================================================
# 리스크 관리
# =============================================================================
# 일일 최대 손실 (포트폴리오 대비 %)
MAX_DAILY_LOSS=5.0

# 월간 최대 손실 (포트폴리오 대비 %)
MAX_MONTHLY_LOSS=15.0

# 연속 손실 제한 (연속 손실 후 거래 중단)
MAX_CONSECUTIVE_LOSSES=3

# =============================================================================
# 기술적 분석 설정
# =============================================================================
# 주요 시간대 (거래 신호 생성용)
PRIMARY_TIMEFRAME=4h

# 보조 시간대 (확인용)
SECONDARY_TIMEFRAME=1h

# 하위 시간대 (진입 타이밍용)
ENTRY_TIMEFRAME=15m

# ATR 기간 (Average True Range)
ATR_PERIOD=14

# =============================================================================
# 백테스팅 설정
# =============================================================================
# 백테스팅 시작 날짜 (YYYY-MM-DD)
BACKTEST_START_DATE=2024-01-01

# 백테스팅 종료 날짜 (YYYY-MM-DD)
BACKTEST_END_DATE=2024-12-31

# 초기 자본 (USDT)
INITIAL_CAPITAL=10000.0

# =============================================================================
# 로깅 설정
# =============================================================================
# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 로그 파일 최대 크기 (MB)
LOG_MAX_SIZE_MB=10

# 로그 백업 파일 수
LOG_BACKUP_COUNT=5

# =============================================================================
# 데이터베이스 설정 (선택 - SQLite 기본 사용)
# =============================================================================
# 데이터베이스 URL (SQLite 파일 경로 또는 PostgreSQL/MySQL URL)
DATABASE_URL=sqlite:///data/trading_bot.db

# =============================================================================
# 웹 인터페이스 설정 (선택)
# =============================================================================
# FastAPI 서버 포트
WEB_SERVER_PORT=8000

# 웹 인터페이스 활성화 여부
WEB_INTERFACE_ENABLED=false

# =============================================================================
# 개발/디버그 설정
# =============================================================================
# 개발 모드 (더 자세한 로깅, 추가 검증)
DEBUG_MODE=false

# 페이퍼 트레이딩 모드 (실제 거래 없이 시뮬레이션)
PAPER_TRADING=true

# 백테스팅 모드
BACKTEST_MODE=false

# =============================================================================
# 성능 모니터링
# =============================================================================
# 성능 메트릭 수집 여부
ENABLE_METRICS=true

# 메트릭 리포트 간격 (시간)
METRICS_REPORT_INTERVAL=24
