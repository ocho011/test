# =============================================================================
# ICT Trading Bot - Development Environment Template
# =============================================================================
# Copy this file to .env and fill in your actual values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
# Options: development, testing, production
TRADING_ENV=development

# Enable debug mode (more verbose logging and validation)
DEBUG=true

# =============================================================================
# BINANCE API CREDENTIALS (REQUIRED)
# =============================================================================
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# For testnet: https://testnet.binance.vision/

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Use Binance testnet for development (recommended for testing)
BINANCE_TESTNET=true

# =============================================================================
# DISCORD NOTIFICATIONS (OPTIONAL)
# =============================================================================
# Discord webhook URL for receiving trade alerts and system notifications
# Get webhook from: Discord Channel Settings -> Integrations -> Webhooks

ENABLE_DISCORD_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# Notification level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DISCORD_ALERT_LEVEL=INFO

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
# Initial capital for trading (USDT)
INITIAL_CAPITAL=10000.0

# Risk per trade as percentage (0.02 = 2%)
RISK_PER_TRADE=0.02

# Maximum position size as percentage of capital (0.1 = 10%)
MAX_POSITION_SIZE=0.1

# Maximum number of open positions simultaneously
MAX_OPEN_POSITIONS=3

# Trading symbols (comma-separated)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT

# =============================================================================
# TIMEFRAME SETTINGS
# =============================================================================
# Primary timeframe for analysis (15m, 1h, 4h, 1d)
PRIMARY_TIMEFRAME=1h

# Higher timeframe for trend confirmation
HIGHER_TIMEFRAME=4h

# Entry timeframe for precise entries
ENTRY_TIMEFRAME=15m

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Stop loss percentage (0.02 = 2%)
STOP_LOSS_PERCENTAGE=0.02

# Take profit percentage (0.04 = 4%)
TAKE_PROFIT_PERCENTAGE=0.04

# Enable trailing stop
TRAILING_STOP=true

# Trailing stop percentage (0.015 = 1.5%)
TRAILING_STOP_PERCENTAGE=0.015

# Daily loss limit as percentage (0.05 = 5%)
MAX_DAILY_LOSS=0.05

# Maximum consecutive losses before stopping
MAX_CONSECUTIVE_LOSSES=3

# =============================================================================
# ICT STRATEGY PARAMETERS
# =============================================================================
# Minimum liquidity sweep size (0.001 = 0.1%)
MIN_LIQUIDITY_SWEEP=0.001

# Minimum Fair Value Gap size (0.002 = 0.2%)
MIN_FVG_SIZE=0.002

# Minimum order block strength (0.0 to 1.0)
MIN_ORDER_BLOCK_STRENGTH=0.7

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=DEBUG

# Enable file logging
LOG_TO_FILE=true

# Log directory
LOG_DIR=logs

# Maximum log file size in MB before rotation
LOG_ROTATION_SIZE_MB=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# Log retention in days
LOG_RETENTION_DAYS=7

# =============================================================================
# BACKTESTING SETTINGS
# =============================================================================
# Enable backtesting mode
BACKTEST_MODE=false

# Backtesting start date (YYYY-MM-DD)
BACKTEST_START_DATE=2024-01-01

# Backtesting end date (YYYY-MM-DD)
BACKTEST_END_DATE=2024-12-31

# Initial capital for backtesting
BACKTEST_INITIAL_CAPITAL=10000.0

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
# Maximum worker threads
MAX_WORKERS=2

# Cache size for market data
CACHE_SIZE=1000

# Data retention in days
DATA_RETENTION_DAYS=30

# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# Health check port
HEALTH_CHECK_PORT=8000

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Enable performance metrics collection
ENABLE_METRICS=true

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================
# Database URL - defaults to SQLite if not specified
# SQLite: sqlite:///data/trading_bot.db
# PostgreSQL: postgresql://user:password@localhost/dbname
# MySQL: mysql://user:password@localhost/dbname

DATABASE_URL=sqlite:///data/trading_bot.db

# =============================================================================
# DEVELOPMENT/TESTING OPTIONS
# =============================================================================
# Paper trading mode (simulate trades without real money)
PAPER_TRADING=true

# Dry run mode (no actual API calls)
DRY_RUN=false

# Mock API calls for testing
MOCK_API=false

# Enable additional validation checks
ENABLE_VALIDATION=true

# =============================================================================
# ADVANCED SETTINGS (OPTIONAL)
# =============================================================================
# Enable automatic backups
ENABLE_AUTO_BACKUP=false

# Backup interval in hours
BACKUP_INTERVAL_HOURS=24

# Backup retention in days
BACKUP_RETENTION_DAYS=7

# Enable IP whitelist (for production security)
ENABLE_IP_WHITELIST=false

# IP whitelist (comma-separated)
# IP_WHITELIST=127.0.0.1,192.168.1.0/24

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env before running the application
# 2. Fill in your actual API keys and configuration values
# 3. Never commit .env file to git (already in .gitignore)
# 4. Use .env.production template for production deployment
# 5. For local development, keep BINANCE_TESTNET=true
# 6. Start with PAPER_TRADING=true to test without risk
