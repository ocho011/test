# =============================================================================
# ICT Trading Bot - Production Environment Template
# =============================================================================
# This is a template for production deployment
# Copy and customize this file for your production environment
#
# Security: Keep this file secure and never commit actual credentials
# =============================================================================

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
TRADING_ENV=production
DEBUG=false

# =============================================================================
# BINANCE API CREDENTIALS (REQUIRED)
# =============================================================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Production uses mainnet
BINANCE_TESTNET=false

# =============================================================================
# DISCORD NOTIFICATIONS (REQUIRED FOR PRODUCTION)
# =============================================================================
ENABLE_DISCORD_NOTIFICATIONS=true
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Production alert level (INFO or WARNING recommended)
DISCORD_ALERT_LEVEL=INFO

# =============================================================================
# TRADING PARAMETERS
# =============================================================================
# Initial capital for trading (USDT)
INITIAL_CAPITAL=10000

# Risk per trade (0.02 = 2%)
RISK_PER_TRADE=0.02

# Maximum position size (0.1 = 10%)
MAX_POSITION_SIZE=0.1

# Maximum number of open positions
MAX_OPEN_POSITIONS=5

# Trading symbols (comma-separated)
TRADING_SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT

# =============================================================================
# TIMEFRAME SETTINGS
# =============================================================================
PRIMARY_TIMEFRAME=1h
HIGHER_TIMEFRAME=4h
ENTRY_TIMEFRAME=15m

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
STOP_LOSS_PERCENTAGE=0.02
TAKE_PROFIT_PERCENTAGE=0.04
TRAILING_STOP=true
TRAILING_STOP_PERCENTAGE=0.015
MAX_DAILY_LOSS=0.05
MAX_CONSECUTIVE_LOSSES=3

# =============================================================================
# ICT STRATEGY PARAMETERS
# =============================================================================
MIN_LIQUIDITY_SWEEP=0.001
MIN_FVG_SIZE=0.002
MIN_ORDER_BLOCK_STRENGTH=0.7

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Production log level (INFO recommended, WARNING for less verbose)
LOG_LEVEL=INFO

LOG_TO_FILE=true
LOG_DIR=logs
LOG_ROTATION_SIZE_MB=50
LOG_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
# Production performance settings
MAX_WORKERS=4
CACHE_SIZE=1000
DATA_RETENTION_DAYS=90

# Health check settings
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8000
HEALTH_CHECK_INTERVAL=60

# Enable metrics collection
ENABLE_METRICS=true

# =============================================================================
# DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================
# Uncomment and configure if using external database
# DATABASE_URL=postgresql://user:password@localhost/trading_bot

# SQLite (default)
DATABASE_URL=sqlite:///data/trading_bot.db

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================
# Uncomment if using Redis for caching/messaging
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# IP whitelist (recommended for production)
ENABLE_IP_WHITELIST=false

# Uncomment and set your allowed IPs
# IP_WHITELIST=127.0.0.1,your_server_ip,192.168.1.0/24

# =============================================================================
# PRODUCTION TRADING MODE
# =============================================================================
# IMPORTANT: Set to false only when ready for live trading
PAPER_TRADING=false

# Production should never use these
DRY_RUN=false
MOCK_API=false
BACKTEST_MODE=false

# Enable validation checks (recommended)
ENABLE_VALIDATION=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_LIVE_TRADING=true
ENABLE_BACKTESTING=false

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# 1. ✓ BINANCE_TESTNET=false
# 2. ✓ Real API keys configured
# 3. ✓ Discord webhook configured for alerts
# 4. ✓ PAPER_TRADING reviewed and set appropriately
# 5. ✓ Risk parameters reviewed and tested
# 6. ✓ Log retention appropriate for your needs
# 7. ✓ Backup settings configured
# 8. ✓ Health check endpoint accessible
# 9. ✓ Firewall rules configured
# 10. ✓ SSL/TLS configured if exposing web interface
